{
  "name": "clab-ide",
  "version": "0.1.0",
  "author": {
    "name": "Victor Humberto",
    "email": "contact@clab.ide"
  },
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "next build && electron-builder",
    "pack": "electron-builder --dir",
    "build:linux": "next build && electron-builder --linux --x64"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "axios": "^1.6.8",
    "clsx": "^2.1.1",
    "electron-serve": "^1.3.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.378.0",
    "next": "^16.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "tailwind-merge": "^2.3.0",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^16.1.6",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.clab.ide",
    "productName": "CLab IDE",
    "copyright": "Copyright Â© 2026",
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}
